# vim: ft=python

fb = module("drv.uefi_fb",
    targets = [ "user" ],
    deps = [ "libc", "bootproto" ],
    description = "UEFI framebuffer driver",
    drivers = [ "uefi.fb" ],
    sources = [
        "font.cpp",
        "main.cpp",
        "screen.cpp",
        "scrollback.cpp",
    ])

fb.variables['asflags'] = ["${asflags}", "-dmain_func=driver_main"]
