# vim: ft=python

ldso = module("ld.so",
    kind = "lib",
    static = True,
    basename = "ld",
    targets = [ "user" ],
    deps = [ "libc", "util", "elf" ],
    description = "Dynamic Linker",
    sources = [
        "main.cpp",
        "relocate.cpp",
        "start.s",
    ])

ldso.variables["ldflags"] = ["${ldflags}", "--entry=_ldso_start"]
